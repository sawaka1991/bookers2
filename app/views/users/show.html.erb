<div class="container">
    <div class="row">
		<%= render 'share/side', user: @user, book: @book %>	
      	<div class="col-md-9">
			<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
			<% end %>
			  	<h2> Books</h2>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>user</th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<% @user.books.each do |book| %>
						<tbody>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: '50x50' %></td>
								<td>
									<%= link_to book_path(book) do %>
							            <div><%= book.title %></div>
							        <% end %></td>
								<td><%= book.body %></td>
							</tr>
						</tbody>
					<% end %>
				</table>
		</div>
	</div>
</div>