
	<h1>User Info</h1>
	<div>
		 <%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb pphoto", fallback: "no_image.jpg", size: '200x200' %>
	</div>
       	<table class="table table-striped">
	    	<tbody>
	      		<tr>
	        		<th>name</th>
	       			<td><%= user.name %></td>
	      		</tr>
	     		<tr>
	        		<th>Introduction</th>
	           		<td><%= user.introduction %></td>
	    		</tr>
		   	</tbody>
		</table>
	<div>
		<% if @user == current_user %>
			<%= link_to edit_user_registration_path  do %>
			<button class="btn btn-default btn-block ">
				<div class="glyphicon glyphicon-cog " aria-hidden="true"></div>
			</button>
        	<% end %>
		<% end %>

	</div>
