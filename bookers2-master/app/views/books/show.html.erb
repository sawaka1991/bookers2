<div class="container">
    <div class="row">
		<%= render 'share/side', user: @user, book: @bookf %>
      	<div class="col-md-9">
			<% if flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>
				<h2>Book detail</h2>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>user</th>
								<th>Title</th>
								<th>Opinion</th>
								<th> </th>
								<th> </th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><%= link_to user_path(@user) do %>
									<%= attachment_image_tag @book.user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: '50x50' %><% end %></td>
								<td><%= @book.title %></td>
								<td><%= @book.body %></td>
								<% if @book.user == current_user %>
									<td><%= link_to edit_book_path(@book) do %>
										<div class="btn btn-success">edit</div></td>
									<% end %>
								
								<td><%= link_to book_path(@book.id), method: :delete, "data-confirm" => "are you sure?" do %>
									<div class="btn btn-danger">destroy</div>
									<% end %>
								<% end %>
								</td>
							</tr>
						</tbody>
					</table>
		</div>
	</div>
</div>
