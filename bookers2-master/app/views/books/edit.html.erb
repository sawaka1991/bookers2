<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

		<% if @book.errors.any? %>
    		<div id="error_explanation">
      			<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      			<ul>
      				<% @book.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
      				<% end %>
      				<% end %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Update Book' %>
	

<p><%= link_to "show", book_path(@book) %>
|
<%= link_to "back", books_path %>
</p>
<% end %>