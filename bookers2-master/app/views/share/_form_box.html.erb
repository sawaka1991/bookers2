	<%= form_for(book) do |f| %>
		<% if book.errors.any? %>
    		<div id="error_explanation">
      			<h2><%= book.errors.count %>件のエラーが発生しました。</h2>
      			<ul>
      				<% book.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
      				<% end %>
      			</ul>
    		</div>
          <% end %>
	     	<div class="form">
  				<h3>★title★</h3>
			     <%= f.text_field :title %>
				  <h3>✩body✩</h3>
			     <%= f.text_area :body %><br>
			     <%= f.submit 'create book', class: 'btn btn-warning' %>
		    </div>
  	<% end %>
